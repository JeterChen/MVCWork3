@using MVCWork3.Extensions

@model IEnumerable<MVCWork3.Models.ViewModels.MoneyViewModel>
@{
    Layout = null;
    var index = 0;
}

<div class="row" id="moneylist">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
                <th>功能</th>
            </tr>
            @{
                foreach (var m in Model)
                {

                    var color = m.Type == MVCWork3.Enums.CategoryType.Income ? "blue" : "red";

                    <tr style="color:@color">
                        <td>@(((int)ViewData["currentPage"]) * 10 + ++index)</td>
                        <td>@(m.Type.GetDisplayName())</td>
                        <td>@Html.DisplayFor(modelitem => m.Date)</td>
                        <td>@Html.DisplayFor(modelitem => m.Price)</td>
                        <td>

                            @Html.ActionLink("Edit", "Edit", new { id = m.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = m.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = m.Id })
                        </td>
                    </tr>

                };
            }

        </table>
    </div>
</div>


